@model IEnumerable<Asset_Management.ViewModel.AuditResponse>
@{
    ViewBag.Title = "Audit";
    ViewBag.namePage = "Unvalidate Audit";
    ViewBag.Level1 = "Audit";
    ViewBag.Level2 = "UnvalidateAudit";
    // Admin Unvalidate Audit
    Layout = "adminLayout";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">

                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Asset Name</th>
                                    <th>Specification</th>
                                    <th>Serial Number</th>
                                    <th>PurchaseYear</th>
                                    <th>PIC Name</th>
                                    <th>Condition</th>
                                    <th>Type Windows</th>
                                    <th>Type Office</th>
                                    <th>Antivirus</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.AssetName</td>
                                        <td>@item.AssetSpecification</td>
                                        <td>@item.AssetSerialNumber</td>
                                        <td>@item.AssetPurchaseYear</td>
                                        <td>@item.PicName</td>
                                        <td>@item.Condition</td>
                                        <td>@item.TypeWindows</td>
                                        <td>@item.TypeOffice</td>
                                        <td>@item.Antivirus</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success btn-xs" data-original-title="History Data" data-placement="top">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
