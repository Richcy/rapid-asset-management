@model Asset_Management.ViewModel.AuditResponse

@{
    ViewBag.Title = "Audit";
    ViewBag.namePage = "Detail Unvalidate Audit";
    ViewBag.Level1 = "Audit";
    ViewBag.Level2 = "UnvalidateAudit";
    // Admin Detail Unvalidate Audit
    Layout = "adminLayout";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-8">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Detail Unvalidate Audit</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th>ID</th>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>Asset Name</th>
                                    <td>@Model.AssetName</td>
                                </tr>
                                <tr>
                                    <th>Specification</th>
                                    <td>@Model.AssetSpecification</td>
                                </tr>
                                <tr>
                                    <th>Serial Number</th>
                                    <td>@Model.AssetSerialNumber</td>
                                </tr>
                                <tr>
                                    <th>Purchase Year</th>
                                    <td>@Model.AssetPurchaseYear</td>
                                </tr>
                                <tr>
                                    <th>PIC Name</th>
                                    <td>@Model.PicName</td>
                                </tr>
                                <tr>
                                    <th>Condition</th>
                                    <td>@Model.Condition</td>
                                </tr>
                                <tr>
                                    <th>Type Windows</th>
                                    <td>@Model.TypeWindows</td>
                                </tr>
                                <tr>
                                    <th>Screenshot Windows License</th>
                                    <td>
                                        <img id="windowsImg" src="~/upload_audit/@Model.WindowsLicenseUrl" style="width:90px" />
                                    </td>
                                </tr>
                                <tr>
                                    <th>Type Office</th>
                                    <td>@Model.TypeOffice</td>
                                </tr>
                                <tr>
                                    <th>Screenshot Office License</th>
                                    <td>
                                        <img id="officeImg" src="~/upload_audit/@Model.OfficeLicenseUrl" style="width:90px" />
                                    </td>
                                </tr>
                                <tr>
                                    <th>Antivirus</th>
                                    <td>@Model.Antivirus</td>
                                </tr>
                                <tr>
                                    <th>Recent Photo</th>
                                    <td>
                                        <img id="assetImg" src="~/upload_audit/@Model.AssetPhotoUrl" style="width:90px" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
                <a asp-action="Validate" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Validate</a>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

<!-- The Modal windows license-->
<div id="myModal" class="modal">

    <!-- The Close Button -->
    <span class="close">&times;</span>

    <!-- Modal Content (The Image) -->
    <img class="modal-content" id="img01">

    <!-- Modal Caption (Image Text) -->
    <div id="caption"></div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the image and insert it inside the modal - use its "alt" text as a caption
        var img = document.getElementById("windowsImg");
        var img2 = document.getElementById("officeImg");
        var img3 = document.getElementById("assetImg");
        var modalImg = document.getElementById("img01");
        var captionText = document.getElementById("caption");
        img.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        }
        img2.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        }
        img3.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        }

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }
    </script>

    
}