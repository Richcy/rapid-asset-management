@model Asset_Management.ViewModel.StatusReq

@{
    ViewBag.Title = "Request Asset";
    ViewBag.namePage = "Rejection";
    ViewBag.Level1 = "RequestAsset";
    ViewBag.Level2 = "RequestAsset";
    Layout = "approvalLayout";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Form Edit Asset</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form asp-controller="RequestAsset" asp-action="SaveRejection" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-sm-12">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="Reason">Reason</label>
                                    <input asp-for="Reason" class="form-control" />
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="RequestAssetId" />
                        <input type="hidden" asp-for="Status" />
                        <input type="hidden" asp-for="UpdatedDate" />
                        <!-- input states -->

                        <div class="row">
                            <div class="col-12">
                                <a asp-action="Index" class="btn btn-secondary">Back</a>
                                <input type="submit" value="Save Changes" class="btn btn-success float-right">
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}