@model IEnumerable<Asset_Management.ViewModel.RequestListResponse>
@{
    ViewBag.Title = "Request";
    ViewBag.namePage = "Daftar Request";
    ViewBag.Level1 = "Daftar Request";
    ViewBag.Level2 = "Daftar Request";
    // pengaju pinjaman
    Layout = "pengajuLayout";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <button asp-action="Add" id="btn-add" type="button" class="btn btn-default">
                            Tambah
                        </button>
                        <table id="" class="table table-bordered table-striped">

                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>PIC Name</th>
                                    <th>PIC Address</th>
                                    <th>Specification</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.PicName</td>
                                        <td>@item.PicAddress</td>
                                        <td>@item.Specification</td>
                                        <td>@item.RequestDate</td>
                                        <td>@item.Status</td>
                                        <td align="center">
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success btn-xs" data-original-title="Detail Data" data-placement="top">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


<div id="add-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $("#btn-add").on("click", function (e) {
            e.preventDefault();
            $.ajax({
                url: "/Request/AddModal",
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $("#add-modal").find(".modal-body").html(data);
                    $("#add-modal").modal("show");
                }
            });

        });
    </script>
}