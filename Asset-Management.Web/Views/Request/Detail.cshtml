@model Asset_Management.ViewModel.RequestAssetDetailResponse
@{
    ViewBag.Title = "Request";
    ViewBag.namePage = "Detail Request";
    ViewBag.Level1 = "Daftar Request";
    ViewBag.Level2 = "Daftar Request";
    // pengaju pinjaman
    Layout = "pengajuLayout";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Asset Detail</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <table class="table table-sm">                        
                            <tbody>
                                <tr>
                                    <th>ID</th>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>PIC Name</th>
                                    <td>@Model.PicName</td>
                                </tr>
                                <tr>
                                    <th>PIC Address</th>
                                    <td>@Model.PicAddress</td>
                                </tr>
                                <tr>
                                    <th>Specification</th>
                                    <td>@Model.Specification</td>
                                </tr>
                                <tr>
                                    <th>RequestDate</th>
                                    <td>@Model.RequestDate</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <div class="card">
@*                    <div class="card-header">
                        <h3 class="card-title">Condensed Full Width Table</h3>
                    </div>*@
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.approval)
                                {
                                    <tr>
                                        <td>@item.Status</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.Reason</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
