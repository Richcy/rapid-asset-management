@model Asset_Management.ViewModel.AssetHistoryReq

@{
    ViewBag.Title = "Asset History - Create New Data";
    Layout = "_Layout";
}

<h2>Return Asset History</h2>

<form asp-controller="ReturnAsset" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="AssetId">Asset Id</label>
        <select type="text" asp-for="AssetId" class="form-control" asp-items="@ViewBag.Asset">
            <option selected>Select Asset</option>
        </select>
        <span asp-validation-for="AssetId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Location" />
    <input type="hidden" asp-for="PicId" />
    <input type="hidden" asp-for="SendDate" />
    <div class="form-group">
        <label asp-for="ReturnDate">Return Date</label>
        <input asp-for="ReturnDate" class="form-control" ></input>
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>
    <div class="pt-2 pb-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
