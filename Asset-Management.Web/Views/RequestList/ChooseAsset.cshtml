@model Asset_Management.ViewModel.AssetHistoryReq

@{
    //ViewBag.Title = "Asset History - Create New Data";
    ViewBag.Title = "Request Asset";
    ViewBag.namePage = "Chose Asset";
    ViewBag.Level1 = "RequestAsset";
    ViewBag.Level2 = "RequestAsset";

    // Admin chose asset
    Layout = "adminLayout";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Form Edit Asset</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form asp-controller="AssetHistory" asp-action="Save" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="AssetId">Asset</label>
                                    <select type="text" asp-for="AssetId" class="form-control" asp-items="@ViewBag.Asset">
                                        <option selected>Select Asset</option>
                                    </select>
                                    <span asp-validation-for="AssetId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Location">Location</label>
                                    <input asp-for="Location" class="form-control"></input>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" asp-for="PicId" /> 
                        <input type="hidden" asp-for="RequestId" />

                        <div class="row">
                            <div class="col-sm-6">
                                <!-- textarea -->
                                <div class="form-group">
                                    <label asp-for="SendDate">Send Date</label>
                                    <input asp-for="SendDate" class="form-control"></input>
                                    <span asp-validation-for="SendDate" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        @* <div class="form-check">
                        <input asp-for="Used"  value="true" type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label asp-for="Used"  class="form-check-label">Check me out</label>


                        <label asp-for="Used" class="form-check-label">Used</label>
                        <input asp-for="Used" class="form-check-input" type="checkbox" value="true">


                        </div>*@

                        <!-- input states -->


                        <div class="row">
                            <div class="col-12">
                                <a asp-action="Index" class="btn btn-secondary">Back</a>
                                <input type="submit" value="Save Changes" class="btn btn-success float-right">
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
